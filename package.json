{
  "name": "node-typescript-prettier-jest-vscode",
  "description": "A scaffolding repo to develop NodeJS apps written in typescript with support for linting + prettier + jest with great support in vscode.",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"yarn watch\" \"yarn watch:types\"",
    "watch": "yarn build --watch",
    "test": "jest",
    "build": "yarn clean; yarn build:types && babel src --out-dir dist --extensions '.ts,.js' --source-maps --ignore 'src/**/*.spec.js,src/**/*.test.js'",
    "prebuild": "yarn clean && yarn fix && yarn lint && yarn checkTypes",
    "release": "yarn prebuild && yarn build",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationMap --isolatedModules false --allowJs false --checkJs false --noEmit false",
    "watch:types": "yarn build:types --watch",
    "checkTypes": "tsc",
    "checkTslint": "tslint-config-prettier-check ./tslint.json",
    "checkEslint": "eslint --print-config . | eslint-config-prettier-check",
    "fix": "concurrently \"yarn fix-ts\" \"yarn fix-js\"",
    "lint": "concurrently \"yarn lint-ts\" \"yarn lint-js\"",
    "lint-ts": "tslint 'src/**/*.{ts}'",
    "lint-js": "eslint 'src/**/*.js'",
    "fix-ts": "prettier-tslint fix 'src/**/*.ts'",
    "fix-js": "prettier-eslint 'src/**/*.js' --write",
    "clean": "rm -rf dist"
  },
  "engines": {
    "node": ">=10.15.0"
  },
  "author": {
    "name": "Juan M. Ca√±abate (@juanmait)"
  },
  "keywords": [
    "scaffolding",
    "typescript",
    "prettier",
    "jest"
  ],
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "^24.0.0",
    "@types/node": "^10.12.24",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "concurrently": "^4.1.0",
    "eslint": "^5.13.0",
    "eslint-config-prettier": "^4.0.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.3",
    "prettier": "^1.16.4",
    "prettier-eslint-cli": "^4.7.1",
    "prettier-tslint": "^0.4.2",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "yarn fix-ts",
      "yarn lint-ts",
      "yarn checkTypes"
    ],
    "*.{js}": [
      "yarn fix-js",
      "yarn lint-js"
    ]
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ]
}
