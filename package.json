{
  "name": "node-typescript-prettier-jest-vscode",
  "description": "A scaffolding repo to develop NodeJS apps written in typescript with support for linting + prettier + jest with great support in vscode.",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "yarn watch",
    "compile": "tsc",
    "watch": "tsc -w",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "lint": "tslint 'src/**/*.{ts}'",
    "fix": "prettier-tslint fix 'src/**/*.ts'"
  },
  "author": {
    "name": "Juan M. Ca√±abate (@juanmait)"
  },
  "keywords": ["scaffolding", "typescript", "prettier", "jest"],
  "devDependencies": {
    "@types/jest": "^23.3.11",
    "@types/node": "^10.12.18",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "jest-extended": "^0.11.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "prettier-tslint": "^0.4.2",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "tslib": "^1.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "prettier-tslint fix"
    ]
  }
}
