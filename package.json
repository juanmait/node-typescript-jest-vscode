{
  "name": "node-typescript-prettier-jest-vscode",
  "description": "A scaffolding repo to develop NodeJS apps written in typescript with support for linting + prettier + jest with great support in vscode.",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "yarn watch",
    "watch": "yarn build --watch",
    "test": "jest",
    "build": "rm -rf dist; yarn build:types; babel src --out-dir dist --extensions '.ts,.js' --source-maps inline --ignore 'src/**/*.spec.js,src/**/*.test.js'",
    "build:types": "tsc --emitDeclarationOnly --declaration --allowJs false --checkJs false --noEmit false",
    "watch:types": "yarn build:types --watch",
    "typeCheck": "tsc",
    "checkTslint": "tslint-config-prettier-check ./tslint.json",
    "lint": "tslint 'src/**/*.{ts}'",
    "fix": "prettier-tslint fix 'src/**/*.ts'"
  },
  "engines": {
    "node": ">=10.15.0"
  },
  "author": {
    "name": "Juan M. Ca√±abate (@juanmait)"
  },
  "keywords": [
    "scaffolding",
    "typescript",
    "prettier",
    "jest"
  ],
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "^24.0.0",
    "@types/node": "^10.12.21",
    "babel-jest": "^24.1.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.3",
    "prettier": "^1.16.4",
    "prettier-tslint": "^0.4.2",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.1"
  },
  "dependencies": {
    "tslib": "^1.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "prettier-tslint fix"
    ]
  }
}
