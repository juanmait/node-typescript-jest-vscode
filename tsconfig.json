{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    // "lib": ["es2016"],
    "allowJs": true,
    "checkJs": true,
    // "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    // "sourceMap": true,
    // "outFile": "./",
    "outDir": "dist",
    "rootDir": "./src",
    // "composite": true,
    // "removeComments": true,
    "noEmit": true,
    "pretty": true,
    "importHelpers": false,
    // "downlevelIteration": true,
    // "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    // "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    // "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    // "baseUrl": "./",
    // "paths": {},
    "rootDirs": ["src"],
    // "typeRoots": [],
    // "types": [],
    "allowSyntheticDefaultImports": false,
    // "esModuleInterop": false
    // "preserveSymlinks": true,
    // "sourceRoot": "",
    // "mapRoot": "",
    // "inlineSourceMap": true,
    // "inlineSources": true,
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "scripts",
    "jest.config.js",
    ".tmp",
    "dist"
  ]
}
